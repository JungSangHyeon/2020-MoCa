<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="two_line_circle"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="circle_1"
                android:pathData="M 12 12 L 12 12"
                android:strokeColor="#dfdfff"
                android:strokeWidth="22"
                android:strokeLineCap="round"/>
            <path
                android:name="circle_2"
                android:pathData="M 12 12 L 12 12"
                android:strokeColor="#ffffff"
                android:strokeWidth="20"
                android:strokeLineCap="round"/>
            <path
                android:name="circle_3"
                android:pathData="M 12 12 L 12 12"
                android:strokeColor="#ffffff"
                android:strokeWidth="18"
                android:strokeLineCap="round"/>
        </vector>
    </aapt:attr>
    <target android:name="circle_1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeColor"
                android:duration="300"
                android:valueTo="?colorSecondary"
                android:valueFrom="#dfdfff"
                android:valueType="colorType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="circle_2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeColor"
                android:duration="300"
                android:valueFrom="#ffffff"
                android:valueTo="?colorSecondary"
                android:valueType="colorType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
