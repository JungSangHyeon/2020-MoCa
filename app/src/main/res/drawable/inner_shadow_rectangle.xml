<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- White Top color -->
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="@color/light_gray" />
        </shape>
    </item>

    <!-- over top shadow -->
    <item>
        <shape
            android:layout_height="match_parent"
            android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:centerColor="#00FF0000"
                android:centerY="0.01"
                android:endColor="#00FF0000"
                android:startColor="#99000000"
                android:type="linear" />
        </shape>
    </item>

    <!-- over left shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:centerColor="#00FF0000"
                android:centerY="0.01"
                android:endColor="#00FFFFFF"
                android:startColor="#99000000"
                android:type="linear" />
        </shape>
    </item>

    <!-- over bottom shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerY="0.007"
                android:endColor="#00FFFFFF"
                android:startColor="#99000000"
                android:type="linear" />
        </shape>
    </item>

    <!-- over right shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerColor="#00FF0000"
                android:centerY="0.002"
                android:endColor="#00FFFFFF"
                android:startColor="#99000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>