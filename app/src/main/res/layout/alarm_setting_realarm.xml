<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/alarm_setting_realarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm_setting_realarm_title"
        android:layout_gravity="center_vertical"
        style="@style/STextView_Main"/>

    <TextView
        android:id="@+id/alarm_setting_realarm_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/alarm_setting_realarm_intervalunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/alarm_setting_realarm_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/alarm_setting_realarm_countunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.onandon.moca.view.customView.OIndexToggleButton
        android:id="@+id/alarm_setting_realarm_on"
        style="@style/OSToggleButton_Check"/>

</LinearLayout>