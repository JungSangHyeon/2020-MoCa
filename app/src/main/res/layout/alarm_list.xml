<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:clipChildren="false"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/alarm_list_dashboard"

        layout="@layout/alarm_list_dashboard"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alarm_list_items"

        tools:itemCount="4"
        tools:listitem="@layout/alarm_list_item"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarm_list_dashboard"
        />

    <com.onandon.moca.onAndOn.customView.OMovableFloatingActionButton
        android:id="@+id/alarm_list_create"

        android:backgroundTint="?colorSecondary"
        app:srcCompat="@drawable/ic_baseline_add_24"
        app:borderWidth="0dp"
        app:rippleColor="@color/invisible"

        app:pressedTranslationZ="0dp"

        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.736"
        />

    <Button
        android:id="@+id/alarm_list_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>