<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Button  -->
    <style name="OSActionButton" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="actionbutton_default_state_background">@drawable/actionbutton_default</item>
        <item name="actionbutton_default_pressed_background">@drawable/actionbutton_pressed</item>
        <item name="actionbutton_disabled_background">@drawable/actionbutton_disable</item>
    </style>

    <style name="OSToggleButton_Week" >
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="togglebutton_checked_state_background">@drawable/circletogglebutton_checked</item>
        <item name="togglebutton_default_state_background">@drawable/circletogglebutton_default</item>
        <item name="togglebutton_checked_to_default_background">@drawable/circletogglebutton_checkedtodefault</item>
        <item name="togglebutton_default_to_checked_background">@drawable/circletogglebutton_defaulttochecked</item>
        <item name="togglebutton_checked_pressed_background">@drawable/circletogglebutton_checkedpressed</item>
        <item name="togglebutton_default_pressed_background">@drawable/circletogglebutton_defaultpressed</item>
        <item name="togglebutton_disabled_background">@drawable/circletogglebutton_disabled</item>
    </style>

    <style name="OSToggleButton_Check" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="togglebutton_checked_state_background">@drawable/checktogglebutton_checked</item>
        <item name="togglebutton_default_state_background">@drawable/checktogglebutton_default</item>
        <item name="togglebutton_checked_to_default_background">@drawable/checktogglebutton_checktodefault</item>
        <item name="togglebutton_default_to_checked_background">@drawable/checktogglebutton_defaulttochecked</item>
        <item name="togglebutton_checked_pressed_background">@drawable/checktogglebutton_checked</item>
        <item name="togglebutton_default_pressed_background">@drawable/checktogglebutton_default</item>
        <item name="togglebutton_disabled_background">@drawable/checktogglebutton_disabled</item>
    </style>

    <style name="OSButton_Navigation" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--  TextView  -->
    <style name="STextView_Main" >
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--  TimePicker  --> <!--  Layout 에서 세팅 불가  -->
    <style name="STimePicker_Alarm"  >
        <item name="colorControlNormal">@color/invisible</item>
        <item name="android:textSize">50sp</item>
    </style>
</resources>