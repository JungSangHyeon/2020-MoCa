<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Button  -->
    <style name="OSActionButton" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="obutton_normal_to_checked">@drawable/oround_square_normal_to_checked</item>
        <item name="obutton_checked_to_normal">@drawable/oround_square_checked_to_normal</item>
    </style>

    <style name="OSToggleButton_Week" >
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="obutton_normal_to_checked">@drawable/othick_circle_normal_to_checked</item>
        <item name="obutton_checked_to_normal">@drawable/othick_circle_checked_to_normal</item>
    </style>

    <style name="OSToggleButton_Check" >
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textOn">@string/null_string</item>
        <item name="android:textOff">@string/null_string</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="obutton_normal_to_checked">@drawable/oline_switch_normal_to_checked</item>
        <item name="obutton_checked_to_normal">@drawable/oline_switch_checked_to_normal</item>
    </style>

    <style name="OSButton_Navigation" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--  TextView  -->
    <style name="STextView_Main" >
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--  TimePicker  --> <!--  Layout 에서 세팅 불가  -->
    <style name="STimePicker_Alarm"  >
        <item name="colorControlNormal">@color/invisible</item>
        <item name="android:textSize">45sp</item>
    </style>

    <!--  Alarm Setting Item  -->
    <style name="SAlarmSettingItem"  >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

</resources>