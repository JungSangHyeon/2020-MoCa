<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Button  -->
    <style name="OToggleButton" >
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_togglebutton</item>
    </style>
    <style name="OnBackgroundButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--  TextView  -->
    <style name="OnSurfaceTextView" >
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--  TimePicker  --> <!--  Layout 에서 세팅 불가  -->
    <style name="OnBackgroundTimePicker"  >
        <item name="colorControlNormal">@color/invisible</item>
        <item name="android:textSize">50sp</item>
    </style>

</resources>