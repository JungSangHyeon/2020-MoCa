<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  background -->
    <style name="OSPrimaryBackground" >
        <item name="android:background">@color/white</item>
    </style>
    <style name="OSSecondaryBackground" >
        <item name="android:background">@color/gray</item>
    </style>

    <!--  surface -->
    <style name="OSSurface" >
        <item name="android:paddingHorizontal">35dp</item>
    </style>
    <style name="OSPrimarySurface" parent="@style/OSSurface">
        <item name="android:background">@color/white</item>
    </style>
    <style name="OSSecondarySurface" parent="@style/OSSurface">
        <item name="android:background">@color/light_gray</item>
    </style>

    <!--  line -->
    <style name="OSLine" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/middle_gray</item>
    </style>

    <!--  Button  -->
    <style name="OSActionButton" >
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="obutton_normal_to_checked">@drawable/oround_square_normal_to_checked</item>
        <item name="obutton_checked_to_normal">@drawable/oround_square_checked_to_normal</item>
    </style>
    <style name="OSActionButton_Volume" >
        <item name="obutton_normal_to_checked">@drawable/ovolume_up_normal_to_checked</item>
        <item name="obutton_checked_to_normal">@drawable/ovolume_up_checked_to_normal</item>
    </style>
    <style name="OSWeekToggleButton" >
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="obutton_normal_to_checked">@drawable/otwo_line_circle_normal_to_checked</item>
        <item name="obutton_checked_to_normal">@drawable/otwo_line_circle_checked_to_normal</item>
    </style>
    <style name="OSCheckToggleButton" >
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textOn">@string/null_string</item>
        <item name="android:textOff">@string/null_string</item>
        <item name="android:layout_gravity">center</item>
        <item name="obutton_normal_to_checked">@drawable/oline_switch_normal_to_checked</item>
        <item name="obutton_checked_to_normal">@drawable/oline_switch_checked_to_normal</item>
    </style>
    <style name="OSNavigationActionButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--  TextView  -->
    <style name="OSTextView" >
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--  TimePicker  --> <!--  Layout 에서 세팅 불가  -->
    <style name="SAlarmTimePicker"  >
        <item name="colorControlNormal">@color/invisible</item>
        <item name="android:textSize">45sp</item>
    </style>

    <!--  Alarm Setting Item  -->
    <style name="SAlarmSettingItem"  >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

</resources>