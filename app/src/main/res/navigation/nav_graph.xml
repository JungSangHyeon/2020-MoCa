<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/main_alarm">

    <fragment
        android:id="@+id/main_alarm"
        android:name="com.onandon.moca.view.alarm.VAlarm"
        android:label="alarm"
        tools:layout="@layout/alarm" >
    </fragment>

    <fragment
        android:id="@+id/main_stopwatch"
        android:name="com.onandon.moca.view.stopwatch.VStopWatch"
        android:label="stopwatch"
        tools:layout="@layout/stopwatch" />

    <fragment
        android:id="@+id/main_worldtime"
        android:name="com.onandon.moca.view.worldtime.VWorldTime"
        android:label="worldtime"
        tools:layout="@layout/worldtime" >
    </fragment>

    <action
        android:id="@+id/action_to_main_alarm"
        app:destination="@id/main_alarm" />
    <action
        android:id="@+id/action_to_main_worldtime"
        app:destination="@id/main_worldtime" />
    <action
        android:id="@+id/action_to_main_stopwatch"
        app:destination="@id/main_stopwatch" />
</navigation>